@model IngWeb.Models.nuclei

@{
    ViewBag.Title = "Create";
}

<h2>
    Nuovo Nucleo
    &nbsp;&nbsp;<img src="~/Content/indietro.png" alt="Torna indietro" onclick="history.back()" style="overflow: hidden; position: relative; width:50px; height:50px;" />
</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2">
                Descrizione
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.descrizione, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                Nucleo padre
            </div>
                <div class="col-md-10">
                    @Html.DropDownList("nucleo_padre", String.Empty)
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Stato
            </div>
                <div class="col-md-10">
                    @Html.DropDownList("enabled", new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Attivo", Value = "S" },
                                new SelectListItem{ Text="Disattivato", Value = "N" }
                             })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salva" class="btn btn-default" />
                </div>
            </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
