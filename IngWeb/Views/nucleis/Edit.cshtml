                @Html.DropDownList("nucleo_padre", ViewBag.nucleo_padrelist as SelectList)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.enabled, htmlAttributes: new { @class = "control-label col-md-2" })
